<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:defaultValue="Username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username" android:key="et_username"/>
    <ListPreference
            android:defaultValue="1"
            android:title="Status"
            android:entries="@array/arrays"
            android:entryValues="@array/arrays"
            android:key="list_status"/>
    <EditTextPreference
            android:defaultValue="Email"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Email" android:key="et_email"/>
</PreferenceScreen>