            android:background="@color/colorPrimary"
            android:textColor="@color/text"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/et_describe_fr_add_answer"
            android:layout_marginStart="160dp" app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
            android:id="@+id/fr_add_new_answer_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
