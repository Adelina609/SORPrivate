<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:hint="@string/title"
            android:layout_width="312dp"
            android:layout_height="43dp"
            android:id="@+id/et_title_fr_add_q" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:hint="@string/describe_the_problem"
            android:layout_width="355dp"
            android:layout_height="71dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/et_describe_fr_add_q" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_title_fr_add_q"
            app:layout_constraintStart_toStartOf="@+id/et_title_fr_add_q" app:layout_constraintEnd_toEndOf="@+id/et_title_fr_add_q"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button"
            android:text="@string/send"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_describe_fr_add_q"
            app:layout_constraintStart_toStartOf="@+id/et_describe_fr_add_q" android:layout_marginStart="144dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>