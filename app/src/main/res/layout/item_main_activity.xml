<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="2dp">

    <TextView
            tools:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question_title"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#1A1919"/>
    <TextView
            tools:text="Subtitle"
            android:layout_width="78dp"
            android:layout_height="29dp"
            android:id="@+id/tv_question_subtitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/tv_question_title"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textColor="#F2636363"/>
</LinearLayout>